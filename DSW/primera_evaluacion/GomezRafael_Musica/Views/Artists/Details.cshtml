@model GomezRafael_Musica.Models.ReviewArtist

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.artist.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.artist.Name)
        </dd>
        <dt class="col-sm-2">
            Comentarios
        </dt>
        <dd class="col-sm-10">
            <a class="btn btn-primary" asp-controller="Reviews" asp-action="Create" asp-route-artistId="@Model.artist.ArtistId" asp-route-name="@Model.artist.Name">
                Crear comentario
            </a>
        </dd>
    </dl>
</div>
@if (Model.reviewList.Any())
{
    <h1>Comentarios:</h1>
    <table class="table">
        <tbody>
            @foreach (var item in Model.reviewList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value) / 5
                    </td>
                </tr>
            }
        </tbody>
    </table>
} else
{
    <h1>Todavía no hay comentarios</h1>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model?.artist.ArtistId">Editar artista</a> |
    <a asp-action="Index">Volver a la lista de artistas</a>
</div>


