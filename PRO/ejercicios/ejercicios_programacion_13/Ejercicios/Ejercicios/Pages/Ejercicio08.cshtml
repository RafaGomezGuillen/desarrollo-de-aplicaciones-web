@page
@model Ejercicios.Pages.Ejercicio08Model
@{
    ViewData["Title"] = "Ejercicio 08";
}
<style>
    .numeros img {
        width: 100%;
        height: 100%;
    }

    .numeros {
        width: 50px;
        height: 50px;
        float: left;
    }
</style>
<h2>Número a imaginar</h2>
<form method="post">
    @if (Request.Method == "POST")
    {
        <p>
            <label for="numero">Número: </label>
            <input type="text" name="numero" value="@Request.Form["numero"]" />
        </p>
    }
    else
    {
        <p>
            <label for="numero">Número: </label>
            <input type="text" name="numero" value="" />
        </p>
    }
    <p>
        <input type="submit" value="Convertir" />
    </p>
</form>
<div>
    @{
        if (Request.Method == "POST")
        {
            string numero = Request.Form["numero"];

            for (int i = 0; i < numero.Length; i++)
            {
                if (numero[i] == '0')
                {
                    <div class="numeros"><img src="/img/Ejercicio08/0.jpg" /></div>
                }
                if (numero[i] == '1')
                {
                    <div class="numeros"><img src="/img/Ejercicio08/1.jpg" /></div>
                }
                if (numero[i] == '2')
                {
                    <div class="numeros"><img src="/img/Ejercicio08/2.png" /></div>
                }
                if (numero[i] == '3')
                {
                    <div class="numeros"><img src="/img/Ejercicio08/3.jpg" /></div>
                }
                if (numero[i] == '4')
                {
                    <div class="numeros"><img src="/img/Ejercicio08/4.png" /></div>
                }
                if(numero[i] == '5')
                {
                    <div class="numeros"><img src="/img/Ejercicio08/5.png"/></div>
                }
                if (numero[i] == '6')
                {
                    <div class="numeros"><img src="/img/Ejercicio08/6.jpg" /></div>
                }
                if (numero[i] == '7')
                {
                    <div class="numeros"><img src="/img/Ejercicio08/7.png" /></div>
                }
                if (numero[i] == '8')
                {
                    <div class="numeros"><img src="/img/Ejercicio08/8.jpg" /></div>
                }
                if (numero[i] == '9')
                {
                    <div class="numeros"><img src="/img/Ejercicio08/9.jpg" /></div>
                }
            }
        }
    }
</div>